<% content_for :title, "Invitar amigos - TodoLegal" %>

<section>
  <a href="/">
    <img  src="/img/Icon-Todolegal-gray20px.svg" alt="Card image cap" class="img-fluid">
  </a>
  <div class="container">
    <div class="card bg-white rounded">
      <div class="card-body">
          <section class="temporal"> Invita a tus amigos</section>
          <h5> Enviar invitaci√≥n a </h5>
          <form action="/refer" method="get">
            <div id="formGroup">
              <div class="form-group">
                  <input type="email" class="form-control" name="email1" aria-describedby="emailHelp" placeholder="nombre@ejemplo.com" id="email">
              </div>
              <div class="form-group" id="inputElement">
                <input type="email" class="form-control" name="email2" aria-describedby="emailHelp" placeholder="nombre@ejemplo.com" id="email2">
              </div>  
              <button type="submit" class="btn btn-block btn-lg btn-primary">Enviar</button>
              <!--
              <% if @is_onboarding%>
                <a href="/" id= "omitirPaso" class="text-center">Omitir este paso</a>
              <% end %>
              -->
            </div>
          </form>
      </div>
    </div>
  </div>
  <%= javascript_pack_tag "form_validator" %>
</section>

<style>
  
  h5{
    font-family: -apple-system, sans-serif;
    margin-bottom: 5%;
  }

  .form-control{
    background: #EFF3F8;
    font-family: -apple-system, sans-serif;
  }

  .btn{
    margin-top: 7%; 
  }

  #omitirPaso{
    display:block;
    font-weight: 500;
    font-size: 18px;
    line-height: 21px;
    color: #1A7FFA;
    margin-top: 5%;
  }

  h5{
    font-weight: bold;
  }

  .temporal{
    background: #171F2A;
    border-radius: 8px;
    color: white;
    text-align: center;
    padding: 30px;
    margin-bottom: 6%;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50px;
    font-size: 28px;
    font-weight: bold;
  }

  section{
    background: #EFF3F8;
  }

  .card{
    width: 75%;
    margin-left: 12.5%;
    padding: 1rem;
  }

  .img-fluid{
    width: 130px;
    margin-left: auto;
    margin-right: auto;
    display: block;
  }

  #plusButton{
    margin-top: 0%;
  }

  @media only screen and (max-width: 767.98px){
    .card{
      width:100%;
      margin-left: 0%;
      padding: 0;
      border: none;
    }
    .card-body{
      padding: 0%;
    }

    section{
      background: white;
    }
    .form-control{
      background-color: #EFF3F8;
    }

    .img-fluid{
      width: 70px;
      margin-left: auto;
      margin-right: auto;
      display: block;
      margin-top: 4%;
      margin-bottom: 4%;
    }
  }
</style>