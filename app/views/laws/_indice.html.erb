  .card-header{
    border: 1px solid #A6B9D3;
  }

  .book-element{
    font-size: 1.2rem;
    background: #DFE7F1;
  }

  .title-element{
    font-size: 1rem;
    background: #F2F5F8;
  }

  .chapter-element{
    font-size: 1rem;
