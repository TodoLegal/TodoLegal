<table class="table table-sm"">
  <thead align="center">
    <tr>
      <th class="table--headers" scope="col">Numero de gaceta</th>
      <th class="table--headers"scope="col">Fecha de publicaci√≥n</th>
      <th class="table--headers"scope="col">Contiene gaceta original</th>
      <th class="table--headers"scope="col">Fraccionada</th>
    </tr>
  </thead>
  <tbody align="center">
  <% gazettes.each do |gazette| %>
    <tr>
      <td>
        <% if gazette.first %>
          <%= link_to gazette.first, gazette_path(gazette.first) %>
        <% end %>
      </td>
      <td>
        <% if gazette.second %>
          <%= gazette.second.first.publication_date %>
        <% end %>
      </td>
      <td>
        <% if gazette.third %>
          <% if gazette.third[:has_original] %>
            <i class="fas fa-check"></i>
          <% end %>
        <% end %>
      </td>
      <td>
        <% if gazette.third %>
          <% if gazette.third[:is_sliced] %>
            <i class="fas fa-check"></i>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  <tr>
  <td>
  </td>
  <td>
  </td>
  <td>
    <%= @gazettes.count %> gacetas ingresadas
  </td>
  <td>
    <%= @sliced_count %> fraccionadas
  </td>
</tr>
  </tbody>
</table>

<style>
  tr:hover {background-color:#c8ced4;}
</style>