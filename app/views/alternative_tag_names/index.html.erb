<p id="notice"><%= notice %></p>

<h1>Alternative Tag Names</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Alternative name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alternative_tag_names.each do |alternative_tag_name| %>
      <tr>
        <td><%= alternative_tag_name.tag.name %></td>
        <td><%= alternative_tag_name.alternative_name %></td>
        <td><%= link_to 'Show', alternative_tag_name %></td>
        <td><%= link_to 'Edit', edit_alternative_tag_name_path(alternative_tag_name) %></td>
        <td><%= link_to 'Destroy', alternative_tag_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

