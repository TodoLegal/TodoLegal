<% if @query.blank? %>
  <% content_for :title, @tag.name + " - TodoLegal" %>
<% else %>
  <% content_for :title, @query + " - " + @tag.name + " - TodoLegal" %>
<% end %>

<div class="jumbotron d-none d-sm-block" align="center" style="padding-top: 0px; padding-bottom: 20px;background-color: #EFF3F8;margin: 0px">
  <a href="/home"><img src="/img/logo_landing_mobile.png" class="img-fluid-vertical" height="300"></a>
</div>

<nav id="myScrollspy" style="padding: 0px" class="d-block d-sm-none navbar sticky-top navbar-expand-xl navbar-light bg-light">
  <%= render partial: 'home/search_law_input', locals: {target_url: tag_path(@tag), home_flag: true} %>
</nav>

<div class="container container--results" style="">
  <div class="d-none d-sm-block">
    <%= render partial: 'home/search_law_input', locals: {target_url: tag_path(@tag), home_flag: true} %>
  </div>
  
  <% if @tag.name == "Laboral" and @query.blank? %>
    <%= render partial: 'ley_abierta_result.html.erb', locals:
    {
      link: "https://open.spotify.com/episode/13gHK4cyrxUKMqCmOtSqX7?si=ed8dfa059bbf4771?tlclick="+@tag.name,
      name: "¿Cómo evitar problemas laborales en tu empresa?",
      summary: "Escucha este episodio para entender todas las medidas de cumplimiento que debes tomar para evitar problemas laborales."
    } %>
  <% end %>

  <% if @tag.name == "Mercantil" and @query.blank? %>
    <%= render partial: 'ley_abierta_result.html.erb', locals:
    {
      link: "https://pod.link/LeyAbierta/episode/77e3ca84c654c4d709124bf69103d128?tlclick="+@tag.name,
      name: "¿Qué tipo de sociedad me conviene para mi negocio?",
      summary: "¿Es mejor un comerciante individual o una sociedad anónima? ¿Qué tipo de sociedad debería de constituir?"
    } %>
  <% end %>

  <%= render partial: 'home/search_result.html.erb', locals: {home_flag: true} %>

  <!--
  <%= link_to 'Ir al inicio', root_path %>-->
</div>

